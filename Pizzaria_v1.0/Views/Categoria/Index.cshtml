@model IEnumerable<Pizzaria_v1._0.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Cadastrar nova categoria.", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaDescricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaDescricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CategoriaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CategoriaId }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.CategoriaId })
        </td>
    </tr>
}

</table>
